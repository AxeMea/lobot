#!/bin/sh

# chkconfig: 345 86 16

# description: TeamCity service #
#

export JAVA_HOME=/usr/lib/jvm/jre-1.6.0-openjdk.x86_64

start(){
  echo "Starting TeamCity"
  exec /command/setuidgid <%= @username %> /home/<%= @username %>/TeamCity/bin/startup.sh
  exec /command/setuidgid <%= @username %> /home/<%= @username %>/TeamCity/buildAgent/bin/agent.sh start
}

stop(){
  echo "Stopping TeamCity"
  exec /command/setuidgid <%= @username %> /home/<%= @username %>/TeamCity/bin/shutdown.sh
  exec /command/setuidgid <%= @username %> /home/<%= @username %>/TeamCity/buildAgent/bin/agent.sh stop kill
}

restart(){
  echo "Restarting TeamCity"
  stop
  start
}

case "$1" in
  start)
    start;;

  stop)
    stop;;

  restart)
    restart;;
*)

echo $"Usage: $0 {start|stop|restart}"
exit 1
esac

exit 0

